# ====================================
# SOMETHING'S BREWING - ENVIRONMENT VARIABLES
# ====================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control

# ====================================
# SUPABASE CONFIGURATION
# ====================================
# Get these from your Supabase project settings
PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Supabase Service Role Key (for server-side operations)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# ====================================
# PAYMENT PROCESSING
# ====================================
# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret-here

# PayPal Configuration (Optional - for future implementation)
PAYPAL_CLIENT_ID=your-paypal-client-id-here
PAYPAL_CLIENT_SECRET=your-paypal-client-secret-here

# ====================================
# EMAIL SERVICE
# ====================================
# SendGrid Configuration
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=no-reply@yourdomain.com
SENDGRID_FROM_NAME=Something's Brewing

# Alternative Email Service (Optional)
RESEND_API_KEY=re_your-resend-api-key-here

# ====================================
# APPLICATION CONFIGURATION
# ====================================
# Application Environment
NODE_ENV=development
APP_ENV=development

# Application URLs
PUBLIC_APP_URL=http://localhost:5173
PUBLIC_API_URL=http://localhost:5173/api

# Domain Configuration
PUBLIC_DOMAIN=localhost:5173
PUBLIC_PROTOCOL=http

# ====================================
# SECURITY CONFIGURATION
# ====================================
# JWT Secret for additional token signing (if needed)
JWT_SECRET=your-jwt-secret-key-minimum-32-characters-long

# Session Secret
SESSION_SECRET=your-session-secret-minimum-32-characters-long

# Encryption Key (for sensitive data)
ENCRYPTION_KEY=your-encryption-key-32-characters-long

# ====================================
# ANALYTICS & MONITORING
# ====================================
# Google Analytics
PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking
PUBLIC_SENTRY_DSN=https://your-sentry-dsn-here

# Vercel Analytics (if using Vercel)
VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# ====================================
# THIRD-PARTY INTEGRATIONS
# ====================================
# Image Upload Service (if using Cloudinary)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Social Media API Keys (for sharing features)
TWITTER_API_KEY=your-twitter-api-key
FACEBOOK_APP_ID=your-facebook-app-id

# ====================================
# DATABASE CONFIGURATION
# ====================================
# Additional Database Settings (if needed beyond Supabase)
DATABASE_URL=your-database-connection-string-here

# Redis Configuration (for caching, if implemented)
REDIS_URL=redis://localhost:6379

# ====================================
# FEATURE FLAGS
# ====================================
# Enable/Disable Features
ENABLE_AFFILIATE_SYSTEM=true
ENABLE_BLOG_SYSTEM=true
ENABLE_QUIZ_SYSTEM=true
ENABLE_SUBSCRIPTION_SYSTEM=true
ENABLE_MULTI_LANGUAGE=true

# Payment Methods
ENABLE_STRIPE_PAYMENTS=true
ENABLE_PAYPAL_PAYMENTS=false

# ====================================
# DEVELOPMENT CONFIGURATION
# ====================================
# Debug Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ====================================
# PRODUCTION OVERRIDES
# ====================================
# These should be set differently in production
# STRIPE_PUBLISHABLE_KEY=pk_live_your-live-stripe-key
# STRIPE_SECRET_KEY=sk_live_your-live-stripe-key
# PUBLIC_APP_URL=https://yourdomain.com
# PUBLIC_API_URL=https://yourdomain.com/api
# NODE_ENV=production
# APP_ENV=production

# ====================================
# INSTRUCTIONS
# ====================================
# 1. Copy this file to .env in your project root
# 2. Fill in all the required values for your environment
# 3. Never commit .env files to version control
# 4. Use different values for development, staging, and production
# 5. Keep your API keys and secrets secure
# 6. Regularly rotate your secrets for security
